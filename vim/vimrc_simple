set nocompatible
filetype off
autocmd Filetype python set foldmethod=indent
filetype plugin indent on 

syntax enable
set t_Co=16

set encoding=utf-8
set path+=**                 " recurisve find

set exrc
set secure

set expandtab                " covert tabs to spaces
set nosmarttab
set textwidth=79
set tabstop=4
set shiftwidth=4
set softtabstop=4

set foldmethod=syntax
set foldlevelstart=4

set clipboard=autoselectplus

set number
set noswapfile
set nobackup
set nowb
set nowrap

set incsearch
set hlsearch
set wildmenu
set cursorline
set ignorecase
set smartcase

set lazyredraw

set noerrorbells
